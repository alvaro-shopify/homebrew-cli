{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/mySchema",
  "definitions": {
    "mySchema": {
      "description": "Shopify.app.toml schema",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 30
        },
        "client_id": {
          "type": "string"
        },
        "application_url": {
          "type": "string",
          "format": "uri"
        },
        "embedded": {
          "type": "boolean"
        },
        "access_scopes": {
          "properties": {          
              "use_legacy_install_flow": {
                "type": "boolean"
              }
            }
          },
          "auth": {
            "properties": {
              "redirect_urls": {
                "type": "array",
                "items": {
                  "type": "string",
                  "format": "uri"
                }
              }
            }
          },
          "webhooks": {
            "properties": {
              "api_version": {
                "type": "string",
                "enum": [
                  "2022-10",
                  "2023-01",
                  "2023-04",
                  "2023-07"
                ]
              },
              "privacy_compliance": {
                "properties": {
                  "customer_deletion_url": {
                    "type": "string",
                    "format": "uri"
                  },
                  "customer_data_request_url": {
                    "type": "string",
                    "format": "uri"
                  },
                  "shop_deletion_url": {
                    "type": "string",
                    "format": "uri"
                  }
                }
              }
            }
          },
          "app_proxy": {
            "properties": {
              "url": {
                "type": "string",
                "format": "uri"
              },
              "subpath": {
                "type": "string"
              },
              "prefix": {
                "type": "string"
              }
            },
            "pos": {
              "properties": {
                "embedded": {
                  "type": "boolean"
                }
              }
            },
            "app_preferences": {
              "properties": {
                "url": {
                  "type": "string",
                  "format": "uri"
                }
              }
            },
            "build": {
              "properties": {
                "automatically_update_urls_on_dev": {
                  "type": "boolean"
                },
                "dev_store_url": {
                  "type": "string",
                  "format": "uri"
                }
              }
            },
            "extension_directories": {
              "type": "array",
              "items": "string"
            },
            "web_directories": {
              "type": "array",
              "items": "string"
            }
          }
        },
        "additionalProperties": true,
        "required": [
          "name",
          "client_id",
          "application_url",
          "embedded"
        ]
      }
    }
  }
}
